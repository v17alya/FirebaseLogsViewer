{
  "name": "firebase-logs-viewer",
  "version": "1.0.0",
  "description": "A lightweight JavaScript application for viewing and analyzing logs stored in Firebase Realtime Database using the firebase_logs.module.js schema",
  "main": "index.html",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/css/input.css -o ./public/assets/styles.css --watch",
    "build:css": "npx tailwindcss -i ./src/css/input.css -o ./public/assets/styles.css --minify",
    "build": "npm run build:css && vite build",
    "start": "vite",
    "start:mock": "vite --port 3001",
    "preview": "vite preview",
    "test:schema": "open test-new-schema.html"
  },
  "keywords": [
    "firebase",
    "logs",
    "viewer",
    "javascript",
    "realtime-database"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "tailwindcss": "^3.4.0",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "firebase": "^12.1.0"
  }
}
