{
  "name": "firebase-logs-viewer",
  "version": "1.0.0",
  "description": "A lightweight JavaScript web app to browse, filter, group, and export logs from Firebase Realtime Database",
  "main": "index.html",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/css/input.css -o ./public/assets/styles.css --watch",
    "build": "npx tailwindcss -i ./src/css/input.css -o ./public/assets/styles.css --minify",
    "start": "vite",
    "start:mock": "vite --port 3001",
    "build:app": "vite build",
    "preview": "vite preview"
  },
  "keywords": [
    "firebase",
    "logs",
    "viewer",
    "javascript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "tailwindcss": "^3.4.0",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "firebase": "^12.1.0"
  }
}
